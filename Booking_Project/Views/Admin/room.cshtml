@model List<Room>
@*<link rel="stylesheet" href="~/css/Adminroom.css" asp-append-version="true" />*@
<br >

<div class="col">
    <a href="NewRoom" class="btn btn-success w-25 m-5 ">New Room</a>
</div>
@foreach (var item in Model)
{
    <div class="cardcontent w-75 m-auto pt-3 pb-3 rounded">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 rounded-top" src="/1.jpg">
                </div>
                <div class="carousel-item ">
                    <img class="d-block w-100 rounded-top" src="/2.jpg">
                </div>
                <div class="carousel-item rounded-top ">
                    <img class="d-block w-100" src="/3.jpg">
                </div>
               @* <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>*@
               
            </div>
            

        </div>
        <div class="border border-info">
            <div class="content m-2 pt-3  ">
                <h5 class="font-weight-bold">Room Number :@item.room_number</h5>
               
                 <p class="font-italic">Hotel Id :@item.hotel.Name</p>           
                <p class="font-italic">MaxOccupancy :@item.MaxOccupancy</p>
                <p class="font-italic">Number Of Beds :@item.NumOfBed</p>
                <p class="font-italic">Price :@item.Price</p>
                <p class="font-italic">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
            <div class="container">
                <div class="row m-auto">
                   
                    <div class="col">
                        <a href="editroom/@item.Id" class="btn btn-success w-50 m-5  ">Edit</a>
                    </div>
                    <div class="col">
                        <a href="DeleteRoom/@item.Id" class="btn btn-danger w-50 m-5 ">Delete</a>
                    </div>
                    
                </div>
            </div>
        </div>
        
        
        

    </div>
       

   


}







    
            